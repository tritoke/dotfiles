" determine folds based on indentation
setlocal foldmethod=indent

" use 4 spaces instead of tabs
setlocal expandtab
setlocal tabstop=4
setlocal shiftwidth=4

" allow editing past line endings, useful for making tables
setlocal virtualedit=all

" autoindent doesn't behave well when writing text
setlocal autoindent

" we're writing test so spelling is helpful
setlocal spell
