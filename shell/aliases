# use exa instead of ls and tree
alias ls='exa'
alias l='exa'
alias ll='exa -lh'
alias la='exa -al'
alias tree='exa -T'

# make grep auto color
alias grep="grep --color=auto"

# application shortcuts
alias ccat="highlight --out-format=ansi"
alias pdf="zathura"

# make find never print when it can't access a directory
alias find="find 2>/dev/null"
