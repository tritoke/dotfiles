# global variables {{{

# set locale
export LANG="en_GB.UTF-8"
export LC_ALL="en_GB.UTF-8" 

# makes mouse less jittery in kvm virtual machines
export SDL_VIDEO_X11_DGAMOUSE=0

# use the correct va-api driver
export LIBVA_DRIVER_NAME="iHD"

# use the correct vdpau driver
export VDPAU_DRIVER="va_gl"

export SSH_KEY_PATH="$HOME/.ssh/rsa_id"

export EDITOR="vim"
export BROWSER="firefox-developer-edition"

export PATH="$PATH:$HOME/.scripts"

# }}}

# XDG base dir support {{{

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"

export ANDROID_SDK_HOME="$XDG_CONFIG_HOME/android"
export TMUX_TMPDIR="$XDG_RUNTIME_DIR"

# }}}

# location shortcuts {{{

FZF="/usr/share/fzf"
ZSH_PLUGINS="/usr/share/zsh/plugins"
ROCKYOU="/usr/share/dict/rockyou.txt"
DIRLIST="/usr/share/dirbuster/directory-list-2.3-medium.txt"
DIRLIST_SMALL="/usr/share/dirbuster/directory-list-2.3-small.txt"

# }}}
