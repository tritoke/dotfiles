# vim: fdm=marker foldlevel=0

# global variables {{{

# set locale
export LANG="en_GB.UTF-8"
export LC_ALL="en_GB.UTF-8" 

export SSH_KEY_PATH="$HOME/.ssh/rsa_id"

export EDITOR="lvim"
export BROWSER="firefox-devedition"

export GOPATH="$HOME/.local/go:$HOME/Code/Go"

export ANDROID_SDK_ROOT="/opt/android-sdk"

export PYENV_ROOT="$HOME/.local/share/pyenv"

# }}}

# Make GPG use TTY pinentry {{{
# ensure this line is present in the gpg agent config
# echo "pinentry-program /usr/bin/pinentry-curses" >> .gnupg/gpg-agent.conf
export GPG_TTY=$(tty)
gpg-connect-agent updatestartuptty /bye >/dev/null
# }}}

# path additions {{{

PATH="$PATH:$HOME/.local/bin"
PATH="$PATH:$HOME/.local/go/bin"
PATH="$PATH:$HOME/.local/share/pyenv/bin"
PATH="$PATH:$HOME/.local/share/JetBrains/Toolbox/scripts"
PATH="$PATH:$HOME/.cargo/bin"
export PATH="$PATH:$HOME/.scripts"

# look for man pages of locally installed programs
if [ -z ${MANPATH+x} ]
then
  export MANPATH="`manpath`:$HOME/.local/share/man"
fi

# }}}

# XDG base dir support {{{

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

export ANDROID_SDK_HOME="$XDG_CONFIG_HOME/android"
export TMUX_TMPDIR="$XDG_RUNTIME_DIR"

# }}}

# location shortcuts {{{

export FZF="/usr/share/doc/fzf/examples"
export ZSH_PLUGINS="/usr/share"
export ZSH_PLUGINS2="/usr/local/share"
export ROCKYOU="$HOME/.builds/SecLists/Passwords/Leaked-Databases/rockyou.txt"
export DIRLIST="$HOME/.builds/SecLists/Discovery/Web-Content/raft-medium-words.txt"
export DIRLIST_SMALL="$HOME/.builds/SecLists/Discovery/Web-Content/raft-small-words.txt"
export VENV_DIR="$XDG_DATA_HOME/venvs"

# }}}

# Program default argument sets {{{
# nmap
SMBARGS="-p445 --script=smb-enum-shares,smb-enum-users"
NFSARGS="-p111 --script=nfs-ls,nfs-statfs,nfs-showmount"

# }}}
