#!/bin/sh

eval "$(cat $HOME/.scriptvars)"
BOOKDIR=$(echo $BOOKPATH | awk '{ split($0,a,":"); for (line in a) { print a[line] } }' | dmenu -p "Select the directory to open books from:" -l 30)
BOOK=$(ls $BOOKDIR/*.pdf | rev | cut -d '/' -f 1 | cut -d '.' -f 1 --complement | rev | dmenu -l 30 -p "Select the book to open: ")
[ "$BOOK" = "" ] || zathura "$BOOKDIR/$BOOK.pdf"
